#! /bin/zsh

echo "------------------------------------"
echo "Will save profiles to [ \033[32m$MY_CONFIG_ROOT\033[0m ]"
echo "------------------------------------"
read

cat which-is-my-config | while read line; do
  if [ -z "$line" ] || [[ "$line" =~ ^# ]]; then
    continue
  fi
  eval ./save-to-my-config ${=line}
done

CURR=$(pwd)
cd $MY_CONFIG_ROOT
git diff
echo "------------------------------------"
git add .
git status
echo "------------------------------------"
read
git commit -m 'update: sync mac profile'
echo "------------------------------------"
echo 'already add & commit'
echo "------------------------------------"
git push
cd $CURR

